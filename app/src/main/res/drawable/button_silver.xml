<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#bdc3c7"
                android:startColor="#bdc3c7"
                android:type="linear"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="#bdc3c7"/>
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#bdc3c7"/>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="5dp"/>
            <gradient
                android:angle="90"
                android:endColor="#bdc3c7"
                android:startColor="#bdc3c7"
                android:type="linear"/>
        </shape>
    </item>
</selector>