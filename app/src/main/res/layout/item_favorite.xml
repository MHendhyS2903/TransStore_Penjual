<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vmItemFavorite"
            type="id.asiatek.asiatrans.viewmodel.FavoriteItemViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_stmp"-->
        <!--            android:layout_width="@dimen/_150sdp"-->
        <!--            android:layout_height="@dimen/_150sdp"-->
        <!--            android:layout_gravity="right|center"-->
        <!--            android:src="@mipmap/stmp_proses"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:orientation="horizontal"
                android:gravity="right">
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@{vmItemFavorite.test}"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="test"
                        android:textStyle="bold"
                        android:textColor="#3CB64B"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            app:srcCompat="@drawable/ic_store"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="italic"
                            android:text="@{vmItemFavorite.created_at}"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/ic_logo_at_mini"
                    android:background="@drawable/custom_border_menu"
                    android:layout_gravity="right"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_delete"></ImageView>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="2"
                    android:layout_marginRight="10dp"
                    android:text="Add to Cart"
                    android:textColor="#ffcb05"
                    android:textStyle="bold"
                    android:background="@drawable/custom_border_cart"></Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="Bayar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/custom_border_menu_2"></Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
