<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vmItemHome"
            type="id.asiatek.asiatrans.viewmodel.HomeItemViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_stmp"-->
        <!--            android:layout_width="@dimen/_150sdp"-->
        <!--            android:layout_height="@dimen/_150sdp"-->
        <!--            android:layout_gravity="right|center"-->
        <!--            android:src="@mipmap/stmp_proses"/>-->

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/kipas2"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{vmItemHome.title}"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{vmItemHome.price}"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
